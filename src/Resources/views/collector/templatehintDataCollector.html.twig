{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {{ include('@Gebi84Templatehint/collector/sf-toolbar_templathint_js.html.twig') }}

    {% set icon %}
        {% set linkname = 'template_hint_on' %}
        {% if collector.isTemplateHintEnabled %}
            {% set linkname = 'template_hint_off' %}
        {% endif %}
        <a style="cursor: pointer;" class="sf-toolbar-block" href="javascript:void(0);" onclick="templatehint.ajax('{{ path(linkname, {scope: collector.getScope}) }}')">
            {{ include('@WebProfiler/Icon/twig.svg') }}
            <span class="sf-toolbar-value">Hints</span>
            {% if collector.isTemplateHintEnabled %}
            <span style="color: green;" class="sf-toolbar-label">
                on
            {% else %}
            <span class="sf-toolbar-label">
                off
            {% endif %}
            </span>
        </a>
    {% endset %}

    {# the 'link' value set to 'false' means that this panel doesn't
       show a section in the web profiler #}
    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: false }) }}
{% endblock %}
